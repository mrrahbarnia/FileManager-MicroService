S3__API_PORT_NUMBER="9010"
S3__CONSOLE_PORT_NUMBER="9011"
S3__HOST_NAME="minio"
S3__BUCKET_NAME="my-bucket"
S3__REGION_NAME="us-east-1"
S3__URL = "${S3__CONNECTION_PROTOCOL}://${S3__HOST_NAME}:${S3__API_PORT_NUMBER}"

